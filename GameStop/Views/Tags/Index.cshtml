@{
  Layout = "_Layout";
}

@using GameStop.Models;

<h2>Tags</h2><br>
<hr>

@if (@Model.Count == 0)
{
  <h5>No tags have been added yet!</h5>
} 
<div class="row" style="padding-top: 30px;">
<div class="col-6">
<ul>
@foreach (Tag tag in Model)
{
  <li style="list-style-position: inside;">@Html.ActionLink($"{tag.Title}", "Details", new { id = tag.TagId })</li>
}
</ul>
</div>
<div class="col-6">
<p>@Html.ActionLink("Create new tag", "Create")</p>
</div>
</div>
<hr>